<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/_5sdp"
    tools:context=".activity.MainActivity">


    <ImageView
        android:id="@+id/backArrow"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:src="@drawable/ic_back"
        app:layout_constraintBottom_toBottomOf="@+id/searchView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.SearchView
        android:id="@+id/searchView"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:theme="@style/SearchViewStyle"
        app:layout_constraintEnd_toStartOf="@id/cartLayout"
        app:layout_constraintStart_toEndOf="@+id/backArrow"
        app:layout_constraintTop_toTopOf="parent"
        app:voiceIcon="@drawable/ic_mic"
        app:searchHintIcon="@null"
        app:searchIcon="@null"
        app:queryHint="Search Dress and Tops"
        app:queryBackground="@android:color/transparent"
        android:background="@drawable/background_button_ash"
        app:iconifiedByDefault="false" />
    <ImageView
        android:id="@+id/mic"
        android:layout_width="@dimen/_22sdp"
        android:layout_height="@dimen/_22sdp"
        android:src="@drawable/ic_mic"
        android:layout_marginEnd="@dimen/_10sdp"
        app:layout_constraintBottom_toBottomOf="@+id/searchView"
        app:layout_constraintEnd_toEndOf="@id/searchView"
        app:layout_constraintTop_toTopOf="parent" />
    <RelativeLayout
        android:id="@+id/cartLayout"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        app:layout_constraintStart_toEndOf="@id/searchView"
        app:layout_constraintBottom_toBottomOf="@+id/searchView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="0dp">
    <ImageView
        android:id="@+id/cart"
        android:src="@drawable/ic_cart_empty"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"/>
        <TextView
            android:id="@+id/tv_count"
            android:layout_marginTop="@dimen/_3sdp"
            android:textSize="@dimen/_11sdp"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_5sdp"
        app:layout_constraintTop_toBottomOf="@id/searchView"
        android:textColor="@color/black"
        android:text="@string/dress_tops"
        android:textSize="@dimen/_16ssp"
        android:textStyle="bold"
       />
    <ImageView
        android:id="@+id/filter"
        android:src="@drawable/ic_filter"
        app:layout_constraintTop_toBottomOf="@id/searchView"
        app:layout_constraintEnd_toStartOf="@+id/gallery"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_3sdp"
        app:layout_constraintBottom_toBottomOf="@+id/heading"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"/>
    <ImageView
        android:id="@+id/gallery"
        android:src="@drawable/ic_gallery"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/searchView"
        app:layout_constraintBottom_toBottomOf="@+id/heading"
        android:layout_marginTop="@dimen/_3sdp"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_marginTop="@dimen/_10sdp"
            android:paddingBottom="@dimen/_70sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            tools:listitem="@layout/grocery_item_layout"
            app:layout_constraintTop_toBottomOf="@id/heading" />

</androidx.constraintlayout.widget.ConstraintLayout>